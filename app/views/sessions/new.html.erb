<% if flash[:notice] %>
    <%= content_tag :h1, flash[:notice]%>
<%else%>
    <%= content_tag :h1, "please Log in"%>
<%end%>

<%= form_with url: sessions_path do |f| %>
    <%= f.text_field :email %><br>
    <%= f.password_field :password %><br>
    <%= link_to "Sign Up",new_user_path %><br>
    <%= f.submit "Sign In!"%>
<%end%>